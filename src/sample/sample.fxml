<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylesheet /css/Styles.css?>

<VBox alignment="center" prefHeight="521.0" prefWidth="498.0" stylesheets="@../css/sample.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <TextArea fx:id="textArea" editable="false" focusTraversable="false" prefHeight="269.0" prefWidth="498.0" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="textField" onAction="#sendMsg" prefHeight="32.0" prefWidth="398.0" promptText="Введите сообщение..." HBox.hgrow="ALWAYS" />
        <Button fx:id="btn1" onAction="#sendMsg" prefHeight="25.0" prefWidth="100.0" text="Send"> 
           <graphic>
              <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
              <image>       
                <Image preserveRatio="false" smooth="false" url="@../css/icons8-color-16.png" />
              </image>
              </ImageView>
           </graphic>
        </Button>
    </HBox>
</VBox>
